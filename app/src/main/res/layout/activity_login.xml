<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ronald.footmate.LoginActivity"
    android:id="@+id/LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="饭友"
        android:textSize="30pt"
        android:layout_marginTop="30dp"
        android:id="@+id/Welcome"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@style/AppTheme" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/loginNameEditText"
        android:layout_marginTop="77dp"
        android:hint="用户名"
        android:layout_below="@+id/Welcome"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/loginPasswordEditText"
        android:layout_marginTop="48dp"
        android:hint="密码"
        android:layout_below="@+id/loginNameEditText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:id="@+id/registerButton"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/loginPasswordEditText"
        android:layout_alignLeft="@+id/loginPasswordEditText"
        android:layout_alignStart="@+id/loginPasswordEditText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登陆"
        android:id="@+id/loginButton"
        android:layout_alignTop="@+id/registerButton"
        android:layout_alignRight="@+id/loginPasswordEditText"
        android:layout_alignEnd="@+id/loginPasswordEditText"
        />

</RelativeLayout>
